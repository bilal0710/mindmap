// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mindmap {
  id    String     @default(uuid()) @id
  title  String?
  deleted Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  parentId String?
  parent   Mindmap?    @relation("ParentChildren", fields: [parentId], references: [id])
  children  Mindmap[]  @relation("ParentChildren")
}

model User {
  id    String     @default(uuid()) @id
  email String  @unique
  firstname  String?
  lastname  String?
  password  String
  deleted Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      UserRole     @default(user)
  chatrooms Chatroom[]
}

model Chatroom {
  id    String     @default(uuid()) @id
  name  String?
  deleted Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages Message[]
  users User[]
  type ChatroomType @default(public)
}

model Message{
  id    String     @default(uuid()) @id
  content  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  from String
  to String
  roomId String
  chatroom Chatroom @relation(fields: [roomId], references: [id])
}
enum UserRole {
  user
  admin
}

enum ChatroomType {
  public
  private
}
